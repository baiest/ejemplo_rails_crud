<p id="notice"><%= notice %></p>

<h1>People</h1>

<table class="table table-success table-striped mt-4">
  <thead class="text-center">
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Country</th>
      <th>Description</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.age %></td>
        <td><%= person.country %></td>
        <td><%= person.description %></td>
        <td><%= link_to 'Show', person, :class=>"btn btn-info fs-6" %></td>
        <td><%= link_to 'Edit', edit_person_path(person), :class=>"btn btn-warning fs-6"%></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger fs-6" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path, :class=>"btn btn-primary"%>

